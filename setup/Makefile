 ..\files\ja-JP.lng \
 ..\files\ko-KR.lng \
 ..\files\pt-BR.lng \
 ..\files\zh-CN.lng \
 ..\files\zh-TW.lng \
 ..\files\utils\RESTOREreg.bat

.PHONY: clean
clean:
	del /q ..\files\*.chm
	del /q ..\files\*.lng
	del /q ..\files\utils\SAVEreg.bat
	del /q ..\files\utils\RESTOREreg.bat

all: composition
